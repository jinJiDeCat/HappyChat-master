<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.zz.zy.happychat.activity.RoomActivity">
    <com.zz.zy.happychat.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.zz.zy.happychat.view.SquareImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    tools:src="@drawable/xianjing"
                    android:scaleType="centerCrop"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                </RelativeLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:background="#fff"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:text="Ta的聊天号"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        tools:text="800800"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:id="@+id/iv_dialog"
                        android:layout_width="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dianhua"
                        android:layout_centerInParent="true"
                        android:layout_height="60dp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="80dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="30dp"
                        android:padding="6dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/bg_circle_pink"
                        android:src="@drawable/sanjiao"
                        android:layout_height="30dp" />
                    <TextView
                        android:id="@+id/tv_audioTime"
                        android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_marginLeft="6dp"
                        tools:text="8''"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/xin"
                        android:scaleType="fitXY"
                        android:layout_height="23dp" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f1f1"
                android:layout_height="6dp"></View>
            <TextView
                android:layout_width="match_parent"
                android:text="Ta的资料"
                android:textSize="13sp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="#fff"
                android:layout_height="40dp" />
            <View
                android:layout_width="match_parent"
                android:background="#f1f1f1"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="#fff"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="年龄"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    tools:text="22  金牛座"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f1f1"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="#fff"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:text="性别"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    tools:text="女"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f1f1"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="兴趣"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_height="wrap_content">-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:background="@drawable/bg_round_pink"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="12sp"-->
                <!--android:text="听歌"-->
                <!--android:paddingTop="2dp"-->
                <!--android:paddingBottom="2dp"-->
                <!--android:paddingLeft="6dp"-->
                <!--android:paddingRight="6dp"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:layout_height="wrap_content" />-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:background="@drawable/bg_round_pink"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="12sp"-->
                <!--android:text="看电影"-->
                <!--android:paddingTop="2dp"-->
                <!--android:paddingBottom="2dp"-->
                <!--android:paddingLeft="6dp"-->
                <!--android:paddingRight="6dp"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:layout_height="wrap_content" />-->
                <!--</LinearLayout>-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_hobby"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#f1f1f1"
                android:layout_height="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Ta的礼物"
                android:textSize="13sp"
                android:padding="8dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:layout_height="40dp" />
            <LinearLayout
                android:id="@+id/ll_gift"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="#fff"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <GridView
                    android:id="@+id/recycler_gift"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:numColumns="4"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/fl_giftmore"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/fn1"
                        android:layout_height="20dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </com.zz.zy.happychat.view.MyScrollView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fl_back"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/fn"
                    android:layout_height="20dp" />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                tools:text="千与千寻"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/sandian"
                android:layout_height="25dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
